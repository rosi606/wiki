#!/bin/bash
# Mendefinisikan warna untuk pesan
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[0;33m'
BIRU='\033[0;34m'
PURPLE='\033[0;35m'
CYAN='\033[0;36m'
CYAN_BG='\033[46;1;97m'   # Latar belakang cyan cerah dengan teks putih
LIGHT='\033[0;37m'
PINK='\033[0;35m'
ORANGE='\033[38;5;208m'
PINK_BG='\033[45;1;97m'
BIRU_BG='\033[44;1;97m'
RED_BG='\033[41;1;97m'   # Latar belakang pink cerah dengan teks putih
NC='\033[0m'
INDIGO='\033[38;5;54m'
TEAL='\033[38;5;30m'
WHITE='\033[1;37m'
clear

#Banner Ssh
  echo -e " ${CYAN}======================================${NC}"
  echo -e " ${RED_BG}               BY GDRIVE              ${NC}"
  echo -e " ${CYAN}======================================${NC}"
  echo -e "  1.) Auto Backup VPS Data "  
  echo -e "  2.) Restore VPS Data Via Link   " 
  echo -e " ${CYAN}======================================${NC}"
  echo -e " ${BIRU_BG}               BY SFTP               ${NC}"
  echo -e " ${CYAN}======================================${NC}"
  echo -e "  3.) Manual Backup VPS Data "  
  echo -e "  4.) Restore VPS Data Via SFTP   " 
  echo -e " ${CYAN}======================================${NC}"
  echo -e "  x.) Back to Menu       "
  echo -e " ${CYAN}======================================${NC}"
  echo -e " "

read -p "  ➣ Your Choice: " NB
case $NB in
      1) echo -e "${TEAL} ➣ Service Backup selected ${NC}" 
         skt-auto-backup
         ;;
      2) echo -e "${TEAL} ➣ Service Restore selected ${NC}" 
         skt-auto-restore
         ;;
      3) echo -e "${TEAL} ➣ Service Backup selected ${NC}"  
         skt-manual-backup
         ;;
      4) echo -e "${TEAL} ➣ Service Restore selected ${NC}"  
         skt-manual-restore
         ;;
      x) clear ; menu ;;
      *) phreakers-fitur ;;
esac